/// Avatar com indicador de perfil ativo
class ActiveProfileAvatar extends StatelessWidget {
  final String? photoUrl;
  final double radius;
  final bool isActive;
  final bool isBand;
  final VoidCallback? onTap;

  const ActiveProfileAvatar({
    super.key,
    this.photoUrl,
    this.radius = 20,
    this.isActive = false,
    this.isBand = false,
    this.onTap,
  });

  @override
  Widget build(BuildContext context) {
    return GestureDetector(
      onTap: onTap,
      child: Container(
        decoration: BoxDecoration(
          shape: BoxShape.circle,
          border: isActive
              ? Border.all(
                  color: isBand ? AppColors.accent : AppColors.primary,
                  width: 3,
                )
              : null,
        ),
        child: CircleAvatar(
          radius: radius,
          backgroundImage: photoUrl != null && photoUrl!.isNotEmpty
              ? NetworkImage(photoUrl!)
              : null,
          backgroundColor: (isBand ? AppColors.accentLight : AppColors.primaryLight),
          child: photoUrl == null || photoUrl!.isEmpty
              ? Icon(
                  isBand ? Icons.groups : Icons.person,
                  size: radius * 0.8,
                  color: isBand ? AppColors.accent : AppColors.primary,
                )
              : null,
        ),
      ),
    );
  }
}
