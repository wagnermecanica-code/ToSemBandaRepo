rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Users may upload to their own folder; reads allowed for authenticated users
    match /user_photos/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null;
    }

    // Posts photos readable by authenticated users
    match /posts/{allPaths=**} {
      allow write: if request.auth != null;
      allow read: if request.auth != null;
    }

    // Public files (thumbnails, public profile images) readable by anyone
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
