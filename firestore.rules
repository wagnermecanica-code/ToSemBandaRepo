rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Users: read/write only by owner (contains activeProfileId and profiles array)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Profiles: authenticated read, create/update/delete only by owner (uid field)
    // CRITICAL: Each profile is a separate document, isolated from other profiles
    match /profiles/{profileId} {
      allow read: if request.auth != null;
      
      // Validation helper for profile data
      function isValidProfileData() {
        let data = request.resource.data;
        return data.uid is string
            && data.name is string
            && data.name.size() >= 2
            && data.name.size() <= 50
            && data.isBand is bool
            && data.location is latlng
            && (!data.keys().hasAny(['bio']) || data.bio.size() <= 500)
            && (!data.keys().hasAny(['instruments']) || data.instruments is list)
            && (!data.keys().hasAny(['genres']) || data.genres is list);
      }
      
      allow create: if request.auth != null 
                    && request.resource.data.uid == request.auth.uid
                    && isValidProfileData();
      
      allow update: if request.auth != null 
                    && request.auth.uid == resource.data.uid
                    && isValidProfileData();
      
      allow delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // Posts: read rules allow either author-only listing or public listing when the query includes expiresAt > request.time
    match /posts/{postId} {
      // allow single-document reads
      allow get: if true;

      // allow list when authenticated
      allow list: if request.auth != null;

      // Helper: verifica se o authorProfileId pertence ao uid autenticado
      function isAuthorProfileOwnedByUser(profileId) {
        return get(/databases/$(database)/documents/profiles/$(profileId)).data.uid == request.auth.uid;
      }

      // Validation helper for post data
      function isValidPostData() {
        let data = request.resource.data;
        return data.authorUid is string
            && data.authorProfileId is string
            && data.location is latlng
            && data.expiresAt is timestamp
            && data.expiresAt > request.time
            && data.createdAt is timestamp
            && data.city is string
            && data.city.size() > 0
            && data.type in ['musician', 'band']
            && (!data.keys().hasAny(['description']) || data.description.size() <= 1000)
            && (!data.keys().hasAny(['instruments']) || data.instruments is list)
            && (!data.keys().hasAny(['genres']) || data.genres is list);
      }

      // create: authorUid e authorProfileId devem pertencer ao usuário autenticado + validação de dados
      allow create: if isSignedIn()
        && request.resource.data.authorUid == request.auth.uid
        && request.resource.data.authorProfileId is string
        && isAuthorProfileOwnedByUser(request.resource.data.authorProfileId)
        && isValidPostData();

      // update: authorUid e authorProfileId devem pertencer ao usuário autenticado + validação de dados
      allow update: if isSignedIn()
        && request.auth.uid == resource.data.authorUid
        && resource.data.authorProfileId is string
        && isAuthorProfileOwnedByUser(resource.data.authorProfileId)
        && isValidPostData();

      // delete: apenas o autor pode deletar
      allow delete: if isSignedIn() && request.auth.uid == resource.data.authorUid;
    }

    // Bands: similar public logic
    match /bands/{bandId} {
      allow get: if resource.data.public == true
                  || (request.auth != null && request.auth.uid in resource.data.members)
                  || isAdmin();
      allow list: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (request.auth.uid in resource.data.members || isAdmin());
    }

    // Chats/messages: require authentication (restrict further in production)
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }

    // Conversations: authenticated users can read/write their own conversations
    match /conversations/{conversationId} {
      // Allow list queries with arrayContains on participantProfiles or participants
      allow list: if request.auth != null;
      
      // Allow get if user is participant
      allow get: if request.auth != null && 
                    request.auth.uid in resource.data.participants;
      
      allow create: if request.auth != null && 
                       request.auth.uid in request.resource.data.participants;
      
      allow update: if request.auth != null && 
                       request.auth.uid in resource.data.participants;
      
      allow delete: if request.auth != null && 
                       request.auth.uid in resource.data.participants;

      // Messages subcollection - inherit parent conversation access control
      // Only participants can read/write messages
      match /messages/{messageId} {
        allow read: if request.auth != null 
                    && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        
        allow create: if request.auth != null 
                      && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants
                      && request.resource.data.senderId == request.auth.uid;
        
        allow update, delete: if request.auth != null 
                              && request.auth.uid == resource.data.senderId;
      }
    }

    // Notifications: profile-specific (Instagram-style isolation)
    // CRITICAL: Uses recipientProfileId instead of recipientUid
    // Each profile can only access its own notifications
    match /notifications/{notificationId} {
      // Allow read if authenticated (client-side filters by recipientProfileId)
      allow read: if request.auth != null;
      
      // Anyone authenticated can create notifications (sent to other profiles)
      allow create: if request.auth != null && 
                       request.resource.data.recipientProfileId != null;
      
      // Update/delete: Must be authenticated
      // Note: We rely on client-side validation for now
      // In production, add profile ownership check via profiles collection
      allow update, delete: if request.auth != null;
    }

    // Interests (legacy - being replaced by notifications)
    match /interests/{interestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // Rate Limits: server-side only (Cloud Functions use Admin SDK)
    // Users cannot read or write directly
    match /rateLimits/{limitId} {
      allow read, write: if false;
    }
  }
}
